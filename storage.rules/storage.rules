rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to resumes (public read for viewing)
    match /resumes/{userId}/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // Allow read access to profile images (public read)
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // Allow read access to audio answers (public read)
    match /audio_answers/{applicationId}/{interviewId}/{audioId}/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
